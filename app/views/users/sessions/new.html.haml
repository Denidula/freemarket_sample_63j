.container.login
  .header
    = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__logo'
  .main
    .main__sign-up
      %p
        アカウントをお持ちでない方はこちら
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "新規会員登録", new_registration_path(resource_name), class: 'main__sign-up__btn'

    .main__login
      - if devise_mapping.omniauthable?
        - resource_class.omniauth_providers.each do |provider|
          = link_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), method: :post, class: 'main__login__omniauth'
          %br/

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field__email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'field__email__box'
        .field__password
          = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: 'field__password__box'
        .actions
          = f.submit "ログイン", class: 'actions__login-btn'

        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: 'forget-password'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
