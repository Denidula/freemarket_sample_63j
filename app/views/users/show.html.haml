    .content

      .user-icon
        .inner
          .inner__image
            = image_tag 'https://cdn.pixabay.com/photo/2016/07/23/13/21/pokemon-1536855_1280.png', height: '60', width: '60'
          %h2.inner__name
            user.name
          .inner__number
