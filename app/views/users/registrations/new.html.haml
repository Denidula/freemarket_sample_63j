.container.sign-up
  .header
    = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__logo'
  .main
    .main__text
      新規会員登録
    .main__login
      - if devise_mapping.omniauthable?
        - resource_class.omniauth_providers.each do |provider|
          = link_to "#{OmniAuth::Utils.camelize(provider)}で登録する", omniauth_authorize_path(resource_name, provider), method: :post, class: 'main__login__omniauth'
          %br/

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
