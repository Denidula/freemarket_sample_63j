.container.sign-up
  .header
    = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__logo'
  .main
    .main__text
      新規会員登録
    .main__login
      - if devise_mapping.omniauthable?
        .main__login__mail
          = link_to input_user_info_signup_index_path do
            .main__login__mail--btn
              = "メールアドレスで登録する"
              = fa_icon 'envelope'
        .main__login__facebook
          = link_to user_facebook_omniauth_authorize_path, method: :post do
            .main__login__facebook--btn
              = "Facebookで登録する"
              = fa_icon 'facebook-f'
        .main__login__google
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post do
            .main__login__google--btn
              = "Googleで登録する"
              = fa_icon 'google'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
