.single-contents
  
  .single-header
    %h1
      .top-link
        = link_to '/' do
          = image_tag 'fmarket_logo_red.svg', height: '49', width: '185'

  .single-main

    %section.buy-item-contents

      %h2.buy-item-head
        購入内容の確認
      %section.buy-content.buy-item
        .buy-content__inner
          %h3.item-image
            - @item.images.first(1).each do |image|
              = image_tag image
          %p.item-name
            = @item.name
          %form(action="")
            %p.buy-price
              = converting_to_jpy(@item.price)
              %span.in-shipping-fee
                送料込み
            %ul.not-have
              %li.accordion-parent
                .accordion-toggle
                  ポイントはありません
            %ul.buy-price-table
              %li
                .buy-price-cell
                  支払い金額
                .buy-price-cell
                  %span
                    = converting_to_jpy(@item.price)

      = form_tag(action: :pay, method: :post) do
        %script.payjp-button{:src        => "https://checkout.pay.jp",
                             :type       => "text/javascript", 
                             "data-text" => "購入する",
                             "data-key"  => "pk_test_1e7800d971ffc411c895cc3e"}

      %section.buy-content.buy-user-info
        .buy-content__inner
          %h3
            配送先
          %address.buy-user-info-text
            〒418-0112
            %br
              静岡県富士宮市北山
            富士さん
          %p.buy-user-info-text
          .change
            %span
              変更する 
              = fa_icon 'chevron-right'

      %section.buy-content.buy-user-info
        .buy-content__inner
          %h3
            支払い方法
          %p.buy-user-info-text
            ************1234
            %br
              01 / 20
          %figure
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2177740229', height: '15', width: '49'
          .change
            %span
              変更する 
              = fa_icon 'chevron-right'
            
