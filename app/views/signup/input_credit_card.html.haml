.container.register
  .header
    %h1.haeder__h1
      = link_to '/' do
        = image_tag 'fmarket_logo_red.svg', alt: 'mercari', class: 'header__h1__logo'
    %nav
      %ol
        %li
          会員情報
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          電話番号認証
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          お届け先住所入力
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li(style="color: red; font-weight: bold")
          支払い方法
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          完了
          %br/
          = fa_icon 'circle'
    .horizontal-line(style="color: red; right: 90px")
      ＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿
    .horizontal-line(style="right: 9px")
      ＿＿＿＿

  .main
    .main__text 支払い方法
    .main__form
      = form_tag(signup_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .main__form__group
          %label.main__form__group__label(for="card_number") カード番号
          %span.main__form__group__require 必須
          = text_field_tag "number", "", class: "main__form__group__input-box", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number", required: 'required'
          = image_tag 'creditcard_logos.png', class: 'main__form__group__logos'
          %br
        .main__form__group
          %label.main__form__group__label 有効期限
          %span.main__form__group__require 必須
          .main__form__group__card
            .main__form__group__card__select-box
              %select#exp_month.main__form__group__card__select-box--month{name: "exp_month", type: "text", required: 'required'}
                %option{value: ""} --
              %span.main__form__group__card__text 月
            .main__form__group__card__select-box
              %select#exp_year.main__form__group__card__select-box--year{name: "exp_year", type: "text", required: 'required'}
                %option{value: ""} --
              %span.main__form__group__card__text 年
        .main__form__group
          %label.main__form__group__label セキュリティコード
          %span.main__form__group__require 必須
          = text_field_tag "cvc", "", class: "main__form__group__input-box", placeholder: "カード背面４桁もしくは３桁の番号", maxlength: "4", id: "cvc", required: 'required'
          %p.main__form__group__card-info
            = link_to '/', class: 'link', target: '_blank' do
              = fa_icon 'question-circle'
              = 'カード裏面の番号とは？'
        #card_token
          = submit_tag "次へ進む", id: "token_submit", class: 'main__form__submit-btn'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag 'logo_gray.svg', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
