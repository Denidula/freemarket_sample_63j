.container.register
  .header
    %h1.haeder__h1
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__h1__logo'
    %nav
      %ol
        %li
          会員情報
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          電話番号認証
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          お届け先住所入力
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li(style="color: red; font-weight: bold")
          支払い方法
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          完了
          %br/
          = fa_icon 'circle'
    .horizontal-line(style="color: red; right: 90px")
      ＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿
    .horizontal-line(style="right: 9px")
      ＿＿＿＿

  .main
    .main__text 支払い方法
    .main__form
      = form_for @credit_card, url: signup_index_path, meghod: :post do |f|
        .main__form__group
          = f.label 'カード番号', class: 'main__form__group__label', for: "credit_card_number"
          %span.main__form__group__require 必須
          = f.password_field :number, class: "main__form__group__input-box", placeholder: "半角数字のみ"
          = image_tag 'creditcard_logos.png', class: 'main__form__group__logos'
        .main__form__group
          = f.label '有効期限', class: 'main__form__group__label', for: "credit_card_limit_month"
          %span.main__form__group__require 必須
          .main__form__group__birthday
            .main__form__group__birthday__select-box
              = fa_icon 'chevron-down'
              = f.select :limit_month, ["--"], {},{class: "main__form__group__birthday__select-box--month", id:"select_limit_month"}
            %span.main__form__group__birthday__text 月
            .main__form__group__birthday__select-box
              = fa_icon 'chevron-down'
              = f.select :limit_year,["--"], {},{class: "main__form__group__birthday__select-box--year", id:"select_limit_year"}
            %span.main__form__group__birthday__text 年
        .main__form__group
          = f.label 'セキュリティコード', class: 'main__form__group__label', for: "address_zip_code"
          %span.main__form__group__require 必須
          = f.telephone_field :security_code, class: "main__form__group__input-box", placeholder: "カード背面４桁もしくは３桁の番号"
        %p.main__form__personal-info
          = link_to '/', class: 'link', target: '_blank' do
            = fa_icon 'question-circle'
            = 'カード裏面の番号とは？'
        = f.submit '次へ進む', class: 'main__form__submit-btn'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
