.container.register
  .header
    %h1.haeder__h1
      = link_to '/' do
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__h1__logo'
    %nav
      %ol
        %li
          会員情報
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          電話番号認証
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li(style="color: red; font-weight: bold")
          お届け先住所入力
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          支払い方法
          %br/
          = fa_icon 'circle'
        %li
          完了
          %br/
          = fa_icon 'circle'
    .horizontal-line(style="color: red; right: 210px")
      ＿＿＿＿＿＿＿＿＿＿＿
    .horizontal-line(style="right: 7px")
      ＿＿＿＿＿＿＿＿＿＿

  .main
    .main__text 住所入力
    .main__form
      = form_for @address, url: input_credit_card_signup_index_path, meghod: :post do |f|
        .main__form__group
          = f.label '郵便番号', class: 'main__form__group__label', for: "address_zip_code"
          %span.main__form__group__require 必須
          = f.text_field :zip_code, class: "main__form__group__input-box", placeholder: "例）123-4567"
        .main__form__group
          = f.label '市区町村', class: 'main__form__group__label', for: "address_city"
          %span.main__form__group__require 必須
          = f.text_field :city, class: "main__form__group__input-box", placeholder: "例）新宿区"
        .main__form__group
          = f.label '番地', class: 'main__form__group__label', for: "address_address"
          %span.main__form__group__require 必須
          = f.text_field :address, class: "main__form__group__input-box", placeholder: "例）早稲田鶴巻町３０２−５"
        .main__form__group
          = f.label '建物名', class: 'main__form__group__label', for: "address_building"
          %span.main__form__group__optional 任意
          = f.text_field :building, class: "main__form__group__input-box", placeholder: "例）ステージグランデ早稲田７０６"
        = f.submit '次へ進む', class: 'main__form__submit-btn'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
