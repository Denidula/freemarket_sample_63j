.container.register
  .header
    %h1.haeder__h1
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2749976048', alt: 'mercari', class: 'header__h1__logo'
    %nav
      %ol
        %li(style="color: red; font-weight: bold")
          会員情報
          %br/
          = fa_icon 'circle', style: 'color: red'
        %li
          電話番号認証
          %br/
          = fa_icon 'circle'
        %li
          お届け先住所入力
          %br/
          = fa_icon 'circle'
        %li
          支払い方法
          %br/
          = fa_icon 'circle'
        %li
          完了
          %br/
          = fa_icon 'circle'
    .horizontal-line(style="right: 10px")
      ＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿＿

  .main
    .main__text 会員情報入力
    .main__form
      = form_for @user, url: input_phone_number_signup_index_path, meghod: :post do |f|
        .main__form__group
          = f.label 'ニックネーム', class: 'main__form__group__label', for: "user_nickname"
          %span.main__form__group__require 必須
          = f.text_field :nickname, class: "main__form__group__input-box", placeholder: "例）惣流・アスカ・ラングレー"
        .main__form__group
          = f.label 'メールアドレス', class: 'main__form__group__label', for: "user_email"
          %span.main__form__group__require 必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可', class: 'main__form__group__input-box'
        .main__form__group
          = f.label 'パスワード', class: 'main__form__group__label', for: "user_password"
          %span.main__form__group__require 必須
          = f.password_field :password, autocomplete: "current-password", placeholder: '7文字以上', class: 'main__form__group__input-box'
          .main__form__group__password-revelation
            .main__form__group__password-revelation__checkbox
              = f.check_box :password, {class: 'checkbox'}, true, false
              = f.label :password, 'パスワードを表示する', for: "reveal-password"
        .main__form__group
          %h3 本人確認
          %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        .main__form__group
          = f.label 'お名前（全角）', class: 'main__form__group__label', for: "user_family_name_kanji"
          %span.main__form__group__require 必須
          .main__form__group__input-boxes
            = f.text_field :family_name_kanji, class: "main__form__group__input-boxes--username-family", placeholder: "例）綾波"
            = f.text_field :first_name_kanji, class: "main__form__group__input-boxes--username-first", placeholder: "例）レイ"
        .main__form__group
          = f.label 'お名前カナ（全角）', class: 'main__form__group__label', for: "user_family_name_kana"
          %span.main__form__group__require 必須
          .main__form__group__input-boxes
            = f.text_field :family_name_kana, class: "main__form__group__input-boxes--username-family", placeholder: "例）アヤナミ"
            = f.text_field :first_name_kana, class: "main__form__group__input-boxes--username-first", placeholder: "例）レイ"
        .main__form__group
          = f.label '生年月日', class: 'main__form__group__label', for: "user_birthday_year"
          %span.main__form__group__require 必須
          .main__form__group__birthday
            .main__form__group__birthday__select-box
              = fa_icon 'chevron-down'
              = f.select :birthday_year,["--"], {},{class: "main__form__group__birthday__select-box--year", id:"select_birth_year"}
            %span.main__form__group__birthday__text 年
            .main__form__group__birthday__select-box
              = fa_icon 'chevron-down'
              = f.select :birthday_month, ["--"], {},{class: "main__form__group__birthday__select-box--month", id:"select_birth_month"}
            %span.main__form__group__birthday__text 月
            .main__form__group__birthday__select-box
              = fa_icon 'chevron-down'
              = f.select :birthday_day, ["--"], {},{class: "main__form__group__birthday__select-box--day", id:"select_birth_day"}
            %span.main__form__group__birthday__text 日
        %p.main__form__info ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
        .main__form__recaptcha
          = image_tag 'recaptcha_image.png'
        %p.main__form__consensus
          「次へ進む」のボタンを押すことにより、
          %a(href="/" target="_blank") 利用規約
          に同意したものとみなします
        = f.submit '次へ進む', class: 'main__form__submit-btn'
        %p.main__form__personal-info
          = link_to '/', class: 'link', target: '_blank' do
            = '本人情報の登録について'
            = fa_icon 'chevron-right'

  .footer
    %nav
      %ul.clearfix
        %li
          プライバシーポリシー
        %li
          メルカリ利用規約
        %li
          特定商取引に関する表記
    .fotter__logo
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2177740229', alt: 'mercari', class: 'footer__logo--gray'
    %p.footer__text
      ©️ 2019 Mercari
