
.single-contents
  
  .single-header
    %h1
      .top-link
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2177740229', height: '49', width: '185'

  .single-main

    %section.buy-item-contents

      %h2.buy-item-head
        購入内容の確認
      %section.buy-content.buy-item
        .buy-content__inner
          %h3.item-image
            = image_tag 'https://static.mercdn.net/thumb/photos/m45896064172_1.jpg?1553586186'
          %p.item-name
            メンズ ニット グレー
          %form(action="")
            %p.buy-price
              ¥2,480
              %span.in-shipping-fee
                送料込み
            %ul.not-have
              %li.accordion-parent
                .accordion-toggle
                  ポイントはありません
            %ul.buy-price-table
              %li
                .buy-price-cell
                  支払い金額
                .buy-price-cell
                  %span
                    ¥2,480
            %button.buy-btn
              購入する

      %section.buy-content.buy-user-info
        .buy-content__inner
          %h3
            配送先
          %address.buy-user-info-text
            〒418-0112
            %br
              静岡県富士宮市北山
            富士さん
          %p.buy-user-info-text
          .change
            %span
              変更する 
              = fa_icon 'chevron-right'

      %section.buy-content.buy-user-info
        .buy-content__inner
          %h3
            支払い方法
          %p.buy-user-info-text
            ************1234
            %br
              01 / 20
          %figure
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2177740229', height: '15', width: '49'
          .change
            %span
              変更する 
              = fa_icon 'chevron-right'
            

